{
  "name": "@evil-mango/claude-code-plugins-mcp",
  "version": "0.1.0",
  "description": "MCP server for claude-code-plugins workflow data storage and retrieval",
  "author": "EvilMangos",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvilMangos/claude-code-plugins-mcp"
  },
  "bugs": {
    "url": "https://github.com/EvilMangos/claude-code-plugins-mcp/issues"
  },
  "homepage": "https://github.com/EvilMangos/claude-code-plugins-mcp#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "inspect": "pnpm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "inversify": "^7.10.8",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@swc/core": "^1.15.7",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^8.0.3",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
